<div class="row center-xs corrige form-user white text-left">
  <div class="col-xs-8 col-md-6">
    <div class="box">
      <h2>Regístrate en el blog</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        
        <div class="field">
          <%= f.label :name, "Nombre de usuario" %>
          <%= f.text_field :name, autofocus: true, class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :email, "Correo electrónico:" %><br />
          <%= f.email_field :email, class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :password, "Contraseña:" %>
          <% if @validatable %>
          <em>(mínimo <%= @minimum_password_length %> caracteres)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Confirma tu contraseña:" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
        </div>

        <div class="actions">
          <p>
            <%= f.submit "Regístrate", class:"submit" %>
          </p> 
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>