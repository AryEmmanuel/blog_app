<div class="row center-xs corrige form-user white text-left">
  <div class="col-xs-8 col-md-6">
    <div class="box">
      <h2>Inicia sesión</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, "Correo electrónico" %><br />
          <%= f.email_field :email, autofocus: true, class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :password, "Contraseña" %><br />
          <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me, class:"check_box" %>
            <%= f.label :remember_me, "Recuérdame" %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Iniciar sesión", class:"submit" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
      
    </div>
  </div>
</div>
